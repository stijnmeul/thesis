<?xml version="1.0" encoding="UTF-8"?>

<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>

<dialog id="warning" title="Secret image" orient="vertical" autostretch="always"
        onload="images.onLoad();"
        xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul" 
		buttons="none"
		>
        
        <script type="application/x-javascript" src="chrome://scramble/content/hci/js/images.js"></script>
        <script type="application/x-javascript" src="chrome://scramble/content/utils/monitor.js"></script>
        <script type="application/x-javascript" src="chrome://scramble/content/hci/dialogLoader.js"></script>
         
		<vbox flex="1">
			<vbox flex="1">
				<hbox flex="1">
					<label  style="padding-top: 10px;" value="Your secret image from" />
